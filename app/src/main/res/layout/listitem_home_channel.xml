<?xml version="1.0" encoding="utf-8"?>
<!-- 专题 标题图片 布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/home_icon"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/home_channel_data1_ll"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="?attr/home_icon_channal_bg"
        android:clickable="true" >

        <ImageView
            android:id="@+id/home_channel_data1_pic_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_channel_def" />

        <TextView
            android:id="@+id/home_channel_data1_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_below="@id/home_channel_data1_pic_iv"
            android:gravity="center"
            android:singleLine="true"
            android:text="本院概况"
            android:textColor="@color/activity_home_channeltitle"
            android:textSize="@dimen/text_size_mediumex" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_channel_data2_ll"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="?attr/home_icon_channal_bg"
        android:clickable="true" >

        <ImageView
            android:id="@+id/home_channel_data2_pic_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_channel_def" />

        <TextView
            android:id="@+id/home_channel_data2_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_below="@id/home_channel_data2_pic_iv"
            android:gravity="center"
            android:singleLine="true"
            android:text="本院概况"
            android:textColor="@color/activity_home_channeltitle"
            android:textSize="@dimen/text_size_mediumex" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_channel_data3_ll"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="?attr/home_icon_channal_bg"
        android:clickable="true" >

        <ImageView
            android:id="@+id/home_channel_data3_pic_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_channel_def" />

        <TextView
            android:id="@+id/home_channel_data3_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_below="@id/home_channel_data3_pic_iv"
            android:gravity="center"
            android:singleLine="true"
            android:text="本院概况"
            android:textColor="@color/activity_home_channeltitle"
            android:textSize="@dimen/text_size_mediumex" />
    </RelativeLayout>
</LinearLayout>